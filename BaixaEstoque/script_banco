create database baixaestoque;

create table produto(
    id int primary key auto_increment,
    nome varchar(30),
    descricao varchar(60)
);

create table compra(
    id int primary key auto_increment,
    produto int,
    quantidade int,
    valor_unit float,
    quantidade_disp int,
    foreign key(produto) references produto(id)
);

create table venda(
    id int primary key auto_increment,
    produto int,
    quantidade int,
    valor_total float,
    foreign key(produto) references produto(id)
);